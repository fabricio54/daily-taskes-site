{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div style="text-align:center">
    <img src="/image/logo.jpg" alt="img-agenda" style="border-radius: 50%; margin-top: 50px";></div>
<br>
<div class="card">
    <div class="card-body">
    <form action="/admin/tarefas/edit/{{tarefa.email}}" method="POST">
    <!-- id escondindo no input hidden -->
        <input type="hidden" name="id" value="{{tarefa.id}}">
        <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" value="{{tarefa.nome}}">
        <label for="descricao">Descrição: </label>
            <input type="text" id="descricao" name="descricao" placeholder="descrição tarefa" class="form-control" value="{{tarefa.descricao}}">
        <label for="data">Tempo estimado:</label>
            <input type="text" id="prazo" name="prazo" class="form-control" placeholder="ex: 11:33:00 a 12:33:21" value="{{tarefa.data}}">
        <br>
        <button type="submit"class="btn btn-success" >Editar Tarefa</button>
    </form>
    </div>
</div>